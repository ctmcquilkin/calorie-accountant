          ul#people
              li
                  a(href='#/profile')
                    img(src='http://www.fillmurray.com/g/124/124')
                  h2 Bill Murray
                  span.info
                    em
                      a(href='#/profile') View profile
    .main
        ul.cbp_tmtimeline.add_form
          li
            time.cbp_tmtime(datetime='2013-04-11T12:04')
              span 4/11/13
              |  
              span Now
            .cbp_tmicon.cbp_tmicon-screen
            .cbp_tmlabel
              form
                input#entrydate(type='hidden', name='entrydate', value='0')
                |                                 
                input#nameInput(type='text', placeholder='Food Name')
                |                                 
                input#caloriesInput(type='number', placeholder='Calories', ng-model='ctrl.newItem.value')
                |                                 
                button(ng-click='ctrl.addNewItem()')#add Add
        |                 
        ul#diaryUL.cbp_tmtimeline
          li(ng-repeat="item in ctrl.items")
            .cbp_tmlabel
                h1(ng-bind="item.value")
                h2(ng-bind="item.type.label")

